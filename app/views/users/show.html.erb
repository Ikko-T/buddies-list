<div class="container">
  <% @buddies.each do |buddy| %>
    <div class="card bg-light text-dark mb-3">
        <div class="card-body">
          <h2 class="card-title">
            <%= buddy.first_name %>
            <%= buddy.last_name %>
          </h2>
          <p class="card-text">
            <i class="fa-solid fa-envelope"></i><span class="ms-1"><%= buddy.email %></span>
            <i class="fa-solid fa-square-phone"></i><span class="ms-1"><%= buddy.phone %></span>
            <i class="fa-solid fa-image-portrait"></i><span class="ms-1"><%= buddy.age %></span>
          </p>
          <%= link_to 'Edit', edit_buddy_path(buddy), class: "btn btn-outline-secondary" %>
          <%= link_to 'Delete', buddy, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
        </div>
    </div>
  <% end %>
  <%= link_to 'Back', root_path, class: "btn btn-secondary form-control mb-3" %>
</div>
